<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field 
			name="id"
			type="text"
			label="COM_PRODUCTS_SIZES_FIELD_ID_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_ID_DESC"
			maxlength="10"
			filter="INTEGER"
			class="readonly"
			readonly="true"
		/>
		<field
			name="categories"
			label="COM_PRODUCTS_SIZES_FIELD_CATEGORIES_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_CATEGORIES_DESC"
			type="text"
			maxlength="255"
			class="input-xxlarge input-large-text"
		>
		</field>
		<field
			name="size_title"
			label="COM_PRODUCTS_SIZES_FIELD_SIZE_TITLE_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_SIZE_TITLE_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="size_dimensions"
			label="COM_PRODUCTS_SIZES_FIELD_SIZE_DIMENSIONS_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_SIZE_DIMENSIONS_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="no_pages"
			label="COM_PRODUCTS_SIZES_FIELD_NO_PAGES_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_NO_PAGES_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="price"
			label="COM_PRODUCTS_SIZES_FIELD_PRICE_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_PRICE_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="page_range"
			label="COM_PRODUCTS_SIZES_FIELD_PAGE_RANGE_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_PAGE_RANGE_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="size_image"
			label="COM_PRODUCTS_SIZES_FIELD_SIZE_IMAGE_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_SIZE_IMAGE_DESC"
			type="media"
			maxlength="255"
		>
		</field>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
			filter="interval"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field
			name="checked_out"
			type="hidden"
			label="COM_PRODUCTS_SIZES_FIELD_CHECKED_OUT_LABEL"
			description="COM_PRODUCTS_SIZES_FIELD_CHECKED_OUT_DESC"
			filter="UNSET"
		/>
		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="JGLOBAL_FIELD_CREATED_DESC"
			class="readonly"
		/>
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			description="JGLOBAL_FIELD_CREATED_BY_DESC"
		/>
		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
		/>
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_BY_DESC"
		/>
		<field
			name="publish_up"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S"
			labelclass="control-label"
			filter="user_utc"
		/>
		<field
			name="publish_down"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			labelclass="control-label"
			filter="user_utc"
		/>
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			class="inputbox"
			size="1"
		/>
	</fieldset>
</form>