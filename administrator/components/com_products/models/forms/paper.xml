<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<field 
			name="id"
			type="text"
			label="COM_PRODUCTS_PAPERS_FIELD_ID_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_ID_DESC"
			maxlength="10"
			filter="INTEGER"
			class="readonly"
			readonly="true"
		/>
		<field
			name="title"
			label="COM_PRODUCTS_PAPERS_FIELD_TITLE_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_TITLE_DESC"
			type="text"
			maxlength="255"
			class="input-xxlarge input-large-text"
		>
		</field>
		<field
			name="description"
			label="COM_PRODUCTS_PAPERS_FIELD_DESCRIPTION_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_DESCRIPTION_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="categories"
			label="COM_PRODUCTS_PAPERS_FIELD_CATEGORIES_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_CATEGORIES_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="product_highlight"
			label="COM_PRODUCTS_PAPERS_FIELD_PRODUCT_HIGHLIGHT_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_PRODUCT_HIGHLIGHT_DESC"
			type="editor"
			maxlength="255"
		>
		</field>
		<field
			name="paper_image"
			label="COM_PRODUCTS_PAPERS_FIELD_PAPER_IMAGE_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_PAPER_IMAGE_DESC"
			type="media"
			maxlength="255"
		>
		</field>
		<field
			name="paper_price"
			label="COM_PRODUCTS_PAPERS_FIELD_PAPER_PRICE_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_PAPER_PRICE_DESC"
			type="text"
			maxlength="20"
		>
		</field>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
			filter="interval"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field
			name="checked_out"
			type="hidden"
			label="COM_PRODUCTS_PAPERS_FIELD_CHECKED_OUT_LABEL"
			description="COM_PRODUCTS_PAPERS_FIELD_CHECKED_OUT_DESC"
			filter="UNSET"
		/>
		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="JGLOBAL_FIELD_CREATED_DESC"
			class="readonly"
		/>
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			description="JGLOBAL_FIELD_CREATED_BY_DESC"
		/>
		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
		/>
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_BY_DESC"
		/>
		<field
			name="publish_up"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S"
			labelclass="control-label"
			filter="user_utc"
		/>
		<field
			name="publish_down"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			labelclass="control-label"
			filter="user_utc"
		/>
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			class="inputbox"
			size="1"
		/>
		<field
			name="rules"
			type="rules"
			label="JFIELD_RULES_LABEL"
			translate_label="false"
			class="inputbox"
			filter="rules"
			component="com_products"
			section="paper"
			validate="rules"
		/>
	</fieldset>
</form>