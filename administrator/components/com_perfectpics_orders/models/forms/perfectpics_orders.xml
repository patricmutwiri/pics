<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<field 
			name="id"
			type="text"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_ID_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_ID_DESC"
			maxlength="10"
			filter="INTEGER"
			class="readonly"
			readonly="true"
		/>
		<field
			name="customers_name"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CUSTOMERS_NAME_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CUSTOMERS_NAME_DESC"
			type="text"
			maxlength="255"
			class="input-xxlarge input-large-text"
		>
		</field>
		<field
			name="customers_email"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CUSTOMERS_EMAIL_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CUSTOMERS_EMAIL_DESC"
			type="email"
			maxlength="255"
			validate="email"
		>
		</field>
		<field
			name="customers_phone"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CUSTOMERS_PHONE_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CUSTOMERS_PHONE_DESC"
			type="tel"
			maxlength="255"
			validate="tel"
		>
		</field>
		<field
			name="upload_pdf"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_UPLOAD_PDF_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_UPLOAD_PDF_DESC"
			type="file"
			maxlength="255"
		>
		</field>
		<field
			name="book_size"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_BOOK_SIZE_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_BOOK_SIZE_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="cover_type"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_COVER_TYPE_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_COVER_TYPE_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="paper_type"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_PAPER_TYPE_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_PAPER_TYPE_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="book_title"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_BOOK_TITLE_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_BOOK_TITLE_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="author_name"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_AUTHOR_NAME_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_AUTHOR_NAME_DESC"
			type="text"
			maxlength="255"
		>
		</field>
		<field
			name="catid"
			type="categoryedit"
			extension="com_perfectpics_orders"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			class="inputbox"
			required="true"
		/>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
			filter="interval"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field
			name="checked_out"
			type="hidden"
			label="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CHECKED_OUT_LABEL"
			description="COM_PERFECTPICS_ORDERS_PERFECTPICS_ORDERS_FIELD_CHECKED_OUT_DESC"
			filter="UNSET"
		/>
		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="JGLOBAL_FIELD_CREATED_DESC"
			class="readonly"
		/>
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			description="JGLOBAL_FIELD_CREATED_BY_DESC"
		/>
		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
		/>
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_BY_DESC"
		/>
		<field
			name="publish_up"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S"
			labelclass="control-label"
			filter="user_utc"
		/>
		<field
			name="publish_down"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			labelclass="control-label"
			filter="user_utc"
		/>
		<field
			name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			description="JFIELD_META_DESCRIPTION_DESC"
			class="inputbox"
			rows="3"
			cols="30"
		/>
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			class="inputbox"
			size="1"
		/>
		<field
			name="rules"
			type="rules"
			label="JFIELD_RULES_LABEL"
			translate_label="false"
			class="inputbox"
			filter="rules"
			component="com_perfectpics_orders"
			section="perfectpics_orders"
			validate="rules"
		/>
	</fieldset>
	<fields name="params">
		<fieldset name="params">
		</fieldset>
	</fields>
</form>